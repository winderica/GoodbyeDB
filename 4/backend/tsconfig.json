{
   "compilerOptions": {
      "lib": [
         "esnext"
      ],
      "target": "esnext",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "strict": true,
      "strictPropertyInitialization": false, // for typeorm
      "esModuleInterop": true,
      "sourceMap": true
   }
}
